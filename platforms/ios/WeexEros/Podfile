source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
#忽略引入库的警告
inhibit_all_warnings!

def common
    #WeexSDK
    pod 'WeexSDK', :git => 'https://github.com/bmfe/WeexiOSSDK.git', :tag => '0.18.0'
    #Weex debugger 调试工具，只在开发模式集成
    pod 'WXDevtool', '0.15.3', :configurations => ['Debug']
    #Eros iOS 基础库
    pod 'ErosPluginBaseLibrary', :git => 'https://github.com/bmfe/eros-plugin-ios-baseLibrary.git', :tag => '1.3.2'
    pod 'ErosPluginGeTui', :git => 'https://github.com/bmfe/eros-plugin-ios-getui.git', :tag => '1.0.1'
    pod 'ErosPluginWXShare', :git => 'ssh://git@git.truxing.com:220/ganlan_bc/eros-plugin-ios-wxshare.git', :tag => '1.0.5.6'
    pod 'ErosPluginUMAnalytics', :git => 'https://github.com/bmfe/eros-plugin-ios-UMAnalytics.git', :tag => '1.0.1'
    pod 'TencentCaptcha', :git => 'https://github.com/kang558/eros-plugin-ios-TencentCaptcha.git', :tag => '0.0.2'
    
    #友盟统计SDK
#    pod 'UMCCommon'
#    pod 'UMCAnalytics'
#    pod 'UMCSecurityPlugins'

   end

target 'WeexEros' do
    common
end
